{
  "manifest_version": 3,
  "name": "DashTab - 导航扩展",
  "version": "1.0.1",
  "description": "一个现代化的Chrome新tab导航扩展，支持本地存储、搜索、网站管理等功能",
  "permissions": [
    "storage",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "chrome_url_overrides": {
    "newtab": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "打开DashTab导航"
  },
  "icons": {
    "16": "icons/icon-16.svg",
    "48": "icons/icon-48.svg", 
    "128": "icons/icon.svg"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline';"
  }
}
